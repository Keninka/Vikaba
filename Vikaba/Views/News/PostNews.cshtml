@model CreateNews

@{
    ViewBag.Title = "Создать новость";
    Layout = "_Layout";
}

<h2>Создание новости</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" asp-validation-summary="All"></div>
}

<form enctype="multipart/form-data" asp-action="SaveNews" class="news-form">
    <div class="form-group">
        <label asp-for="Headline">Заголовок</label>
        <input class="form-control" asp-for="Headline">
        <span class="text-danger" asp-validation-for="Headline"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubHeadline">Подзаголовок</label>
        <input class="form-control" asp-for="SubHeadline">
        <span class="text-danger" asp-validation-for="SubHeadline"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content">Содержание</label>
        <textarea class="form-control" asp-for="Content" rows="8" cols="40"></textarea>
        <span class="text-danger" asp-validation-for="Content"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tags">Теги</label>
        <input class="form-control" asp-for="Tags">
        <span class="text-danger" asp-validation-for="Tags"></span>
    </div>

    <div class="form-group">
        <label asp-for="PublishedAt">Дата публикации</label>
        <input class="form-control" type="date" asp-for="PublishedAt">
        <span class="text-danger" asp-validation-for="PublishedAt"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Картинка</label>
        <input asp-for="Image" class="form-control-file">
        <span class="text-danger" asp-validation-for="Image"></span>
    </div>
    
    <div>
        <button class="btn btn-primary" type="submit">Отправить</button>
        <button class="btn btn-default" type="reset">Сбросить</button>
    </div>
    
</form>