@model CreateThread

@{
    ViewBag.Title = "Создание треда";
    Layout = "_Layout";
}

<h2>Создание треда</h2>

<form enctype="multipart/form-data" asp-action="CreateThread" asp-route-board="@ViewBag.Board" class="thread-form">

    <div class="form-group">
        <label asp-for="Email">Электронная почта</label>
        <input class="form-control" asp-for="Email">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input class="form-control" asp-for="UserName">
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Headline">Заголовок</label>
        <input class="form-control" asp-for="Headline">
        <span class="text-danger" asp-validation-for="Headline"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea class="form-control" rows="8" asp-for="Content"></textarea>
        <span class="text-danger" asp-validation-for="Content"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Картинка</label>
        <input asp-for="Image" class="form-control-file">
        <span class="text-danger" asp-validation-for="Image"></span>
    </div>

    <div>
        <button class="btn btn-primary" type="submit">Отправить</button>
        <button class="btn btn-default" type="reset">Сбросить</button>
    </div>


</form>